// Ref https://www.npmjs.com/package/eslint-config-airbnb
{
	"extends": "airbnb-base",
	"env": {
		"browser": true,
		"node": true
	},
	"plugins": ["html","vue"],
	"rules": {
		//Override 2 spaces from Airbnb
		"indent": ["error", "tab"],
		"no-tabs": 0
	}
}
